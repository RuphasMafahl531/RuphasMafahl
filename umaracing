local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Uma Racing | ULTIMATE SPEED V15",
   LoadingTitle = "Bypassing WalkSpeed Limits...",
   LoadingSubtitle = "V15 - Property Hook",
   ConfigurationSaving = { Enabled = false }
})

local Tab = Window:CreateTab("Turbo Settings", 4483362458)

_G.TargetSpeed = 16
_G.InfStam = true

-- 1. INFINITE STAMINA (Kunci Utama)
Tab:CreateToggle({
   Name = "Infinite Stamina (Locked)",
   CurrentValue = true,
   Flag = "StamToggle",
   Callback = function(Value)
       _G.InfStam = Value
       task.spawn(function()
           while _G.InfStam do
               local p = game.Players.LocalPlayer
               if p.Character then
                   p.Character:SetAttribute("Stamina", 100)
                   p.Character:SetAttribute("Sprinting", false) -- Tipu game agar tidak drain
               end
               task.wait()
           end
       end)
   end,
})

-- 2. EXTREME SPEED SETTING
Tab:CreateSlider({
   Name = "Custom Sprint Speed",
   Range = {16, 500},
   Increment = 1,
   CurrentValue = 16,
   Flag = "SpeedSlider", 
   Callback = function(Value)
       _G.TargetSpeed = Value
   end,
})

-- RAHAASIA V15: Hooking Properti WalkSpeed
-- Script ini akan mencegat SEMUA perubahan kecepatan karakter
task.spawn(function()
    local player = game.Players.LocalPlayer
    
    game:GetService("RunService").RenderStepped:Connect(function()
        if player.Character and player.Character:FindFirstChild("Humanoid") then
            local hum = player.Character.Humanoid
            
            -- Jika kita bergerak (Magnitude > 0), paksa speed ke TargetSpeed
            -- Ini akan menimpa perintah apapun dari tombol sprint game
            if hum.MoveDirection.Magnitude > 0 then
                hum.WalkSpeed = _G.TargetSpeed
            end
        end
    end)
end)

-- 3. FITUR TAMBAHAN (Lengkap)
Tab:CreateToggle({
   Name = "Anti Hit Wall (Noclip)",
   CurrentValue = false,
   Callback = function(Value)
       _G.AntiHit = Value
       game:GetService("RunService").Stepped:Connect(function()
           if _G.AntiHit and game.Players.LocalPlayer.Character then
               for _, v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
                   if v:IsA("BasePart") then v.CanCollide = false end
               end
           end
       end)
   end,
})

Tab:CreateButton({
   Name = "Player ESP & Camera",
   Callback = function()
       for _, v in pairs(game.Players:GetPlayers()) do
           if v ~= game.Players.LocalPlayer and v.Character then
               local h = Instance.new("Highlight", v.Character)
               h.FillColor = Color3.fromRGB(255, 0, 0)
           end
       end
       workspace.CurrentCamera.FieldOfView = 120
   end,
})

Rayfield:Notify({
   Title = "V15 Injected!",
   Content = "Set speed ke 250 dan tekan sprint sekarang!",
   Duration = 5,
})
