local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Uma Racing | SPRINT ONLY V17",
   LoadingTitle = "Menyesuaikan Input Sprint...",
   LoadingSubtitle = "V17 - Context Injection",
   ConfigurationSaving = { Enabled = false }
})

local Tab = Window:CreateTab("Turbo Sprint", 4483362458)

_G.SprintSpeed = 16
_G.InfStam = true
local isSprinting = false -- Variabel untuk cek status tombol

-- 1. INFINITE STAMINA (Sudah Berhasil)
Tab:CreateToggle({
   Name = "Infinite Stamina",
   CurrentValue = true,
   Flag = "StamToggle",
   Callback = function(Value)
       _G.InfStam = Value
       task.spawn(function()
           while _G.InfStam do
               local p = game.Players.LocalPlayer
               if p.Character then
                   p.Character:SetAttribute("Stamina", 100)
                   p.Character:SetAttribute("Sprinting", false)
               end
               task.wait()
           end
       end)
   end,
})

-- 2. SPRINT SPEED SETTING
Tab:CreateSlider({
   Name = "Kecepatan Khusus Sprint",
   Range = {16, 500},
   Increment = 1,
   CurrentValue = 16,
   Flag = "SpeedSlider", 
   Callback = function(Value)
       _G.SprintSpeed = Value
   end,
})

-- DETEKSI TOMBOL SPRINT (Mobile & PC)
local UIS = game:GetService("UserInputService")

UIS.InputBegan:Connect(function(input, gpe)
    if gpe then return end
    -- Cek jika tombol Shift (PC) atau tombol Sprint UI (Mobile) ditekan
    if input.KeyCode == Enum.KeyCode.LeftShift or input.UserInputType == Enum.UserInputType.Touch then
        isSprinting = true
    end
end)

UIS.InputEnded:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.LeftShift or input.UserInputType == Enum.UserInputType.Touch then
        isSprinting = false
    end
end)

-- LOOP EKSEKUSI: Hanya paksa speed jika isSprinting = true
game:GetService("RunService").RenderStepped:Connect(function()
    local p = game.Players.LocalPlayer
    local hum = p.Character and p.Character:FindFirstChild("Humanoid")
    
    if hum then
        if isSprinting and hum.MoveDirection.Magnitude > 0 then
            -- HANYA AKTIF SAAT TOMBOL DITEKAN
            hum.WalkSpeed = _G.SprintSpeed
        else
            -- KEMBALI KE NORMAL SAAT TOMBOL DILEPAS
            -- (Bisa kamu ganti 16 ke kecepatan jalan standar gamenya)
            hum.WalkSpeed = 16 
        end
    end
end)

-- 3. FITUR PELENGKAP
Tab:CreateToggle({
   Name = "Anti Hit Wall",
   CurrentValue = false,
   Callback = function(Value)
       _G.AntiHit = Value
       game:GetService("RunService").Stepped:Connect(function()
           if _G.AntiHit and game.Players.LocalPlayer.Character then
               for _, v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
                   if v:IsA("BasePart") then v.CanCollide = false end
               end
           end
       end)
   end,
})

Tab:CreateButton({
   Name = "ESP & Camera",
   Callback = function()
       for _, v in pairs(game.Players:GetPlayers()) do
           if v ~= game.Players.LocalPlayer and v.Character then
               local h = Instance.new("Highlight", v.Character)
               h.FillColor = Color3.fromRGB(255, 0, 0)
           end
       end
       workspace.CurrentCamera.FieldOfView = 120
   end,
})

Rayfield:Notify({
   Title = "V17 Sprint Ready!",
   Content = "Kecepatan tinggi hanya aktif saat kamu menekan tombol sprint!",
   Duration = 5,
})
