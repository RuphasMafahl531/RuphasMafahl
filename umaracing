local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Uma Racing | SPAM TURBO V14",
   LoadingTitle = "Menyiapkan Sistem Spam Speed...",
   LoadingSubtitle = "V14 - Manual Injector",
   ConfigurationSaving = { Enabled = false }
})

local Tab = Window:CreateTab("Turbo Hack", 4483362458)

_G.CurrentSpeed = 16
_G.SpamMultiplier = 2 -- Berapa banyak speed bertambah setiap kali kamu tekan sprint
_G.InfStam = true

-- 1. STAMINA BYPASS (Metode yang sudah berhasil)
Tab:CreateToggle({
   Name = "Infinite Stamina (Active)",
   CurrentValue = true,
   Flag = "StamToggle",
   Callback = function(Value)
       _G.InfStam = Value
       task.spawn(function()
           while _G.InfStam do
               local p = game.Players.LocalPlayer
               if p.Character then
                   p.Character:SetAttribute("Stamina", 100)
                   p.Character:SetAttribute("IsSprinting", false)
               end
               task.wait()
           end
       end)
   end,
})

-- 2. SPAM SPEED SETTING
Tab:CreateSlider({
   Name = "Kecepatan Dasar (WalkSpeed)",
   Range = {16, 300},
   Increment = 1,
   CurrentValue = 16,
   Flag = "BaseSpeed", 
   Callback = function(Value)
       _G.CurrentSpeed = Value
   end,
})

Tab:CreateSlider({
   Name = "Daya Dorong (Spam Power)",
   Range = {1, 20},
   Increment = 1,
   CurrentValue = 5,
   Flag = "SpamPower", 
   Callback = function(Value)
       _G.SpamMultiplier = Value
   end,
})

-- DETEKSI INPUT (Kunci untuk Spam Speed)
local UIS = game:GetService("UserInputService")
local lastPress = 0

UIS.InputBegan:Connect(function(input, gameProcessed)
    -- Mendeteksi tombol Sprint (Shift kiri atau tombol di layar)
    if input.KeyCode == Enum.KeyCode.LeftShift or input.UserInputType == Enum.UserInputType.Touch then
        local p = game.Players.LocalPlayer
        local root = p.Character and p.Character:FindFirstChild("HumanoidRootPart")
        local hum = p.Character and p.Character:FindFirstChild("Humanoid")
        
        if root and hum and hum.MoveDirection.Magnitude > 0 then
            -- Memberikan dorongan instan setiap kali tombol ditekan/di-spam
            root.Velocity = root.Velocity + (hum.MoveDirection * _G.SpamMultiplier * 10)
        end
    end
end)

-- LOOP PENSTABIL (Tetap memaksa WalkSpeed dasar)
game:GetService("RunService").RenderStepped:Connect(function()
    local hum = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("Humanoid")
    if hum and hum.MoveDirection.Magnitude > 0 then
        hum.WalkSpeed = _G.CurrentSpeed
    end
end)

-- 3. FITUR TAMBAHAN LENGKAP
Tab:CreateToggle({
   Name = "Anti Hit Wall",
   CurrentValue = false,
   Callback = function(Value)
       _G.AntiHit = Value
       game:GetService("RunService").Stepped:Connect(function()
           if _G.AntiHit and game.Players.LocalPlayer.Character then
               for _, v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
                   if v:IsA("BasePart") then v.CanCollide = false end
               end
           end
       end)
   end,
})

Tab:CreateButton({
   Name = "ESP & Instant Camera",
   Callback = function()
       for _, v in pairs(game.Players:GetPlayers()) do
           if v ~= game.Players.LocalPlayer and v.Character then
               local h = Instance.new("Highlight", v.Character)
               h.FillColor = Color3.fromRGB(255, 0, 0)
           end
       end
       workspace.CurrentCamera.FieldOfView = 120
   end,
})

Rayfield:Notify({
   Title = "V14 Spam Active!",
   Content = "Coba spam tombol lari kamu sekarang!",
   Duration = 5,
})
