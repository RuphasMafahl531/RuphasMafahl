local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Uma Racing | PHYSICS OVERDRIVE V16",
   LoadingTitle = "Bypassing Game Engine...",
   LoadingSubtitle = "V16 - Body Velocity",
   ConfigurationSaving = { Enabled = false }
})

local Tab = Window:CreateTab("Turbo Engine", 4483362458)

_G.SpeedPower = 0
_G.InfStam = true

-- 1. INFINITE STAMINA (Metode yang sudah berhasil)
Tab:CreateToggle({
   Name = "Infinite Stamina",
   CurrentValue = true,
   Flag = "StamToggle",
   Callback = function(Value)
       _G.InfStam = Value
       task.spawn(function()
           while _G.InfStam do
               local p = game.Players.LocalPlayer
               if p.Character then
                   p.Character:SetAttribute("Stamina", 100)
                   p.Character:SetAttribute("Sprinting", false)
               end
               task.wait()
           end
       end)
   end,
})

-- 2. PHYSICS SPEED (Mendorong Tubuh Karakter)
Tab:CreateSlider({
   Name = "Kecepatan Turbo (Physics)",
   Range = {0, 500},
   Increment = 5,
   CurrentValue = 0,
   Flag = "SpeedSlider", 
   Callback = function(Value)
       _G.SpeedPower = Value
   end,
})

-- KUNCI V16: Injeksi Velocity Langsung ke Tubuh
game:GetService("RunService").Heartbeat:Connect(function()
    local p = game.Players.LocalPlayer
    local char = p.Character
    local root = char and char:FindFirstChild("HumanoidRootPart")
    local hum = char and char:FindFirstChild("Humanoid")
    
    if root and hum and _G.SpeedPower > 0 then
        -- Jika karakter bergerak (tombol jalan/sprint ditekan)
        if hum.MoveDirection.Magnitude > 0 then
            -- Kita timpa kecepatan fisika karakter dengan arah jalan dikali power
            -- Ini akan membuat karakter meluncur kencang terlepas dari WalkSpeed
            root.Velocity = Vector3.new(hum.MoveDirection.X * _G.SpeedPower, root.Velocity.Y, hum.MoveDirection.Z * _G.SpeedPower)
        end
    end
end)

-- 3. FITUR PELENGKAP
Tab:CreateToggle({
   Name = "Anti Hit Wall (Noclip)",
   CurrentValue = false,
   Callback = function(Value)
       _G.AntiHit = Value
       game:GetService("RunService").Stepped:Connect(function()
           if _G.AntiHit and game.Players.LocalPlayer.Character then
               for _, v in pairs(game.Players.LocalPlayer.Character:GetDescendants()) do
                   if v:IsA("BasePart") then v.CanCollide = false end
               end
           end
       end)
   end,
})

Tab:CreateButton({
   Name = "ESP & Camera",
   Callback = function()
       for _, v in pairs(game.Players:GetPlayers()) do
           if v ~= game.Players.LocalPlayer and v.Character then
               local h = Instance.new("Highlight", v.Character)
               h.FillColor = Color3.fromRGB(255, 0, 0)
           end
       end
       workspace.CurrentCamera.FieldOfView = 120
   end,
})

Rayfield:Notify({
   Title = "V16 Physics Loaded!",
   Content = "Atur slider 'Physics' dan lari!",
   Duration = 5,
})
